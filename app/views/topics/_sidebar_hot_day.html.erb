<% cache(["sidebar_hot_day_topics", Time.now.strftime("%Y-%m-%d %H")], :expires_in => 1.hour) do %>
    <div class="totals box">
      <h2 class="title"><%= "一周热门话题" %></h2>

      <ul>
        <% Topic.hot_day_topics(7).each do |item| %>
            <li><%= link_to(truncate(item.title, length: 30), topic_path(item), title: item.title) %></li>
        <% end %>
      </ul>

    </div>
<% end %>